{
  "name": "11ty-blog-template",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:jucegt/11ty-blog-template.git",
  "author": "jucegt <julio2201@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,scss}\"",
    "lint": "eslint . --fix --max-warnings=0",
    "11ty": "node -r esm node_modules/@11ty/eleventy/cmd.js",
    "sass": "sass --no-source-map src/assets/scss:src/assets/css",
    "dev:sass": "yarn sass --watch",
    "build:sass": "yarn sass",
    "dev:11ty": "yarn 11ty --watch --serve",
    "build:11ty": "yarn 11ty",
    "dev": "npm-run-all clean --parallel dev:*",
    "build": "npm-run-all clean build:*",
    "clean": "rm -rf .11ty/"
  },
  "lint-staged": {
    "*.@(js|scss)": "yarn format",
    "*.js": "yarn lint"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0-beta.2",
    "@ampproject/eleventy-plugin-amp": "^0.5.7",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esm": "^3.2.25",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "sass": "^1.43.4",
    "stylelint": "^14.0.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-standard-scss": "^2.0.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^4.0.0"
  },
  "engines": {
    "npm": "PLEASE-USE-YARN",
    "yarn": "^1.22.4",
    "node": "^14.17.0"
  }
}
